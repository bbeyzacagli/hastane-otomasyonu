 <!DOCTYPE HTML>
    <html>
    <head>
    <title>Beyza Hastanesi</title>
    <link href="~/hospital/css/style.css" rel="stylesheet" type="text/css" media="all" />
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <link href="~/hospital/css/default.css" rel="stylesheet" type="text/css" media="all" />
    <link href="~/hospital/css/nivo-slider.css" rel="stylesheet" type="text/css" media="all" />
    <link href='//fonts.googleapis.com/css?family=Times+New+Roman' rel='stylesheet' type='text/css'>
    <script src="~/hospital/js/jquery-1.9.0.min.js"></script>
        <script src="~/hospital/js/jquery.nivo.slider.js"></script>
        <script type="text/javascript">
        $(window).load(function() {
            $('#slider').nivoSlider();
        });
        </script>
    </head>
    <body>
    <div class="wrap">
      <div class="wrapper-box">
        <div class="header">
            <div class="header-top">
                <div class="logo">
                    <a href="@Url.Action("Index", "Home")"><img src="images/logo.png" alt="logo" style="width: 30%;" /></a>
                </div>

                    <style>
                        #girisYapButtonContainer {
                            text-align: right;
                        }

                        #girisYapButton {
                            background-color: #EF9BFC;
                            color: white;
                            border: none;
                            padding: 10px 20px;
                            border-radius: 100px;
                            text-decoration: none;
                            display: inline-block;
                            font-size: 18px;
                            cursor: pointer;
                        }
                    </style>

                    <div id="girisYapButtonContainer">
                        <a id="girisYapButton" href="@Url.Action("girisYap", "KullanıcıHesap")">Giriş Yap</a>
                    </div>

                <div class="clear"></div>

            </div>
            <div class="header-bottom">
                <div id="cssmenu">

                    <ul class="navbar-nav  flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link " asp-area="" asp-controller="Home" asp-action="Index">ANASAYFA</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link " asp-area="" asp-controller="Polyclinic" asp-action="Index">POLİKLİNİKLERİMİZ</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link " asp-area="" asp-controller="Home" asp-action="Privacy">İLETİŞİM BİLGİLERİMİZ</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link " asp-area="" asp-controller="Appointment" asp-action="Index">RANDEVU AL</a>
                        </li>
                    </ul>

                </div>
                <div class="clear"></div>
            </div>
         </div>

        
    <div>
        @RenderBody()
    </div>

            <footer class="footer">
                <div class="container">
                    <p align="center">&copy; 2023 | Beyza Çağlı tarafından tasarlandı.<a asp-area="" asp-controller="Home" asp-action="Privacy"></a></p>
                </div>
            </footer>
            <br /><br />
    </body>
    </html> 
