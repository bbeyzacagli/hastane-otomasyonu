<!DOCTYPE HTML>
<html>
<head>
	<title>BEYZA HASTANESİ</title>
	<link href="~/hastane/css/style.css" rel="stylesheet" type="text/css" media="all" />
	<meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
	<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
	<link href="~/hastane/css/default.css" rel="stylesheet" type="text/css" media="all" />
	<link href="~/hastane/css/nivo-slider.css" rel="stylesheet" type="text/css" media="all" />
	<link href='//fonts.googleapis.com/css?family=Open+Sans' rel='stylesheet' type='text/css'>
	<script src="~/hastane/js/jquery-1.9.0.min.js"></script>
	<script src="~/hastane/js/jquery.nivo.slider.js"></script>
	<script type="text/javascript">
		$(window).load(function () {
			$('#slider').nivoSlider();
		});
	</script>
</head>
<body>
	<div class="wrap">
		<div class="wrapper-box">
			<div class="header">
				<div class="header-top">
					<div class="logo">
						<a href="index.html"><img src="~hastane/images/logo.png" style="width:25%;" alt="" /></a>
					</div>
					<style>
						#cikisYapButtonContainer {
							margin-top: 20px;
							text-align: right;
						}

						#cikisYapButton {
							background-color: #EF9BFC;
							color: white;
							border: none;
							padding: 10px 20px;
							border-radius: 100px;
							text-decoration: none;
							display: inline-block;
							font-size: 18px;
							cursor: pointer;
							margin-right: 10px; 
						}
					</style>

					<div id="cikisYapButtonContainer">
						<a id="cikisYapButton" href="@Url.Action("Index", "Home")">Çıkış Yap</a>
					</div>

					<div class="clear"></div>
				</div>
				<div class="header-bottom">
					<div id="cssmenu">
                        <ul>
                            <li class="active">
								<a><span>YÖNETİCİ PANElİ</span></a>
                            </li>
                            <li class="has-sub">
								<a href="@Url.Action("PoliklinikListele", "Admin")"><span>POLİKLİNİK</span></a>
                                <ul>
									<li class="has-sub"><a href="/Admin/Poliklinik"><span>Ekle</span></a></li>
									<li class="has-sub"><a href="/Admin/PoliklinikListele"><span>Poliklinik Detayları</span></a></li>

                                </ul>
                            </li>
                            <li class="has-sub">
								<a href="@Url.Action("DoktorListele", "Admin")"><span>Doktorlar</span></a>
                                <ul>
                                    <li class="has-sub"><a href="/Admin/Doktor"><span>Ekle</span></a></li>
									<li class="has-sub"><a href="/Admin/DoktorListele"><span>Doktor Detayları</span></a></li>

                                </ul>
                            </li>

                            <li class="last"><a href="/Admin/Randevu"><span>Randevular</span></a></li>

                        </ul>
					</div>

					<div class="clear"></div>
				</div>
			</div>
			
			<div class="main">


				<div>
					@RenderBody()
				</div>

				<footer class="footer">
					<div class="container">
						<br /><br />
						<p align="center">&copy; 2023 | BEYZA ÇAĞLI tarafından tasarlandı.
					</div>
				</footer>
				<br /><br />
			</div>
</body>
</html>